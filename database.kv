#:kivy 1.9

<Display>:
    coltitle: cols_name
    query_in: query_text_input
    data_box: inside_box_layout

    FloatLayout:

        TextInput:
            id: query_text_input
            font_size: 20
            size_hint: 0.8, 0.2
            pos: root.x, root.top - self.height
            hint_text: "put some text here"

        Button:
            id: send_button
            text: "send!"
            size_hint: 0.2, 0.2
            pos: root.x + query_text_input.width, root.top - self.height
            on_press: root.update()


        BoxLayout:
            orientation: "vertical"
            id: inside_box_layout
            padding: 10
            size_hint: 1, 0.8
            
            Label:
                font_size: 20
                size_hint: 1, 0.1
                id: cols_name
                color: 0, 1, 0, 1
                text: "\query me/\query me/"
